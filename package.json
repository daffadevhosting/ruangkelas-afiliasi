{
  "name": "afiliator-app",
  "private": true,
  "scripts": {
    "dev": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/site.css --watch",
    "build:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/site.css --minify",
    "build": "npm run build:css && jekyll build",
    "serve": "npm-run-all -p dev jekyll:serve",
    "jekyll:serve": "bundle exec jekyll serve --livereload"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10"
  }
}
